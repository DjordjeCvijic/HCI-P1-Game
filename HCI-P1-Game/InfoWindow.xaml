<Window x:Class="HCI_P1_Game.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI_P1_Game"
        mc:Ignorable="d"
        Title="InfoWindow" Height="200" Width="500"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="{DynamicResource BackgroundColor2}">
        <Button x:Name="BtnFirst"  Margin="64,89,0,0" VerticalAlignment="Top" Height="58" Click="BtnFirst_Click" FontSize="14" HorizontalAlignment="Left" Width="156" Background="{DynamicResource BackgroundColorForButton}"/>
        <Button x:Name="BtnSecond"  HorizontalAlignment="Left" Margin="272,89,0,0" VerticalAlignment="Top" Height="58" Width="156" Click="BtnSecond_Click" FontSize="14" Background="{DynamicResource BackgroundColorForButton}"/>
        <Label  x:Name="LblMessage"   HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="28" Margin="130,30,0,0" VerticalAlignment="Top" Width="232" Background="{DynamicResource BackgroundColorForLabel}"/>
    </Grid>
</Window>
