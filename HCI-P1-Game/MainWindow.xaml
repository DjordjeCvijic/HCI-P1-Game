<Window x:Class="HCI_P1_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI_P1_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="600"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        >
    
    <Grid Background="{DynamicResource BackgroundColor}">
        <Button x:Name="BtnStartGame" Content="Pocni igru" HorizontalAlignment="Left" Margin="79,184,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.566,2.363" Height="76" Width="171" Click="BtnStartGame_Click" Background="{DynamicResource BackgroundColorForButton}" FontSize="20"/>
        <Button Content="Pregeldaj rezultate" HorizontalAlignment="Left" Margin="358,184,0,0" VerticalAlignment="Top" Height="76" Width="193" FontSize="20" Background="{DynamicResource BackgroundColorForButton}"/>
        <Label Content="Dobro dosli " HorizontalAlignment="Center" Margin="0,67,0,0" VerticalAlignment="Top" Background="{DynamicResource BackgroundColorForLabel}" Height="49" Width="200" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
